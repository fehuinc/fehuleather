Take ["CartDB", "DOMContentLoaded"], (CartDB)->
  if $(".wholesales#checkout .stripe button").length > 0
    processing = false
    form = $ "form.stripe"
    
    handler = StripeCheckout.configure
      key: "<%= ENV.fetch('STRIPE_PUBLISHABLE_KEY') %>"
      name: "Fehu Inc."
      image: "<%= image_path('logo-square-on-white.png') if Rails.env == 'production' %>"
      token: (token)->
        processing = true
        
        currency = CartDB.getCurrency()
        
        form.append("<input type='hidden' name='token' value='#{token.id}'>")
        form.append("<input type='hidden' name='currency' value='#{currency}'>")
        
        form.submit()
        
    $(".stripe button").click (e)->
      e.preventDefault()
      if not processing
        handler.open
          amount: form.find("[name=subtotal]").val()
          description: form.find("[name=description]").val()
          email: form.find("[name=email]").val()
          currency: CartDB.getCurrency()
