<% @totem_rows.each do |totem_row| %>
  <totem-row class="unselectable" ng-class="{showingMoreInfo:moreInfo}">
    <div class="closer"></div>
    <clipping-layer>
      <sliding-layer>
        <% totem_row.items.select(&:show_retail).each do |totem_item| %>
          <totem-item item-name="<%= totem_item.real_name %>">
            <totem-image style="background-image: url('<%= totem_item.real_image %>')"></totem-image>
          </totem-item>
        <% end %>
      </sliding-layer>
    </clipping-layer>
    <panels-wrapper>
      <top-spacer></top-spacer>
      <% totem_row.items.each do |totem_item| %>
        <%= render "totem/panel", item: totem_item %>
      <% end %>
    </panels-wrapper>
    <input-layer></input-layer>
  </totem-row>
<% end %>
