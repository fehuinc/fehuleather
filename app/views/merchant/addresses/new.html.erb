<h1 class="page-title">Tell Us The Location of Your Secret Base<br><small>Or Else...</small></h1>

<form class="address-form" novalidate ng-cloak>
  <section>
    <div class="row two">
      <label>
        Name
        <input type="text" ng-model="checkoutInfo.shippingAddress.name">
      </label>

      <label>
        Email
        <input type="email" ng-model="checkoutInfo.email">
      </label>
    </div>
    
    <div class="row two">
      <div class="set">
        <label>
          Address
          <input type="text" ng-model="checkoutInfo.shippingAddress.address1" placeholder="Line 1">
        </label>
        <input type="text" ng-model="checkoutInfo.shippingAddress.address2" placeholder="Line 2">
      </div>
      
      <label>
        City
        <input type="text" ng-model="checkoutInfo.shippingAddress.city">
      </label>
    </div>
    
    <div class="row three">
      <label class="shrink">
        Country
        <select ng-model="checkoutInfo.shippingAddress.country">
          <option>Canada</option>
          <option>United States</option>
        </select>
      </label>
      
      <label class="province">
        {{checkoutInfo.shippingAddress.country == "United States" ? "State" : "Province"}}
        <input type="text" ng-model="checkoutInfo.shippingAddress.provinceState">
      </label>
      
      <label class="postal">
        {{checkoutInfo.shippingAddress.country == "United States" ? "ZIP" : "Postal"}} Code
        <input type="text" ng-model="checkoutInfo.shippingAddress.postal">
      </label>
      
    </div>
  </section>

  <section class="perspective center">
    <input type="submit" value="Save Address">
  </section>
</form>
