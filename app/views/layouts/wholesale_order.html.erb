<%= render "layouts/top" %>

<button-bar class="perspective">
  <% if style_action == "edit_product" %>
    <%= link_to "< All Products", edit_wholesale_order_path, class: "back button" %>
  <% end %>
  
  <% if @merchant.current_order.order_items.count > 0 %>
    <%= link_to "Checkout >", checkout_wholesale_order_path, class: "button" %>
  <% end %>
</button-bar>

<div class="split">

  <order-builder>
    <%= yield %>
  </order-builder>
  
  <order-preview sticky="10">
    
    <h1>In Your Order</h1>
    <% if @merchant.current_order.order_items.count == 0 %>
      <div>Nothing yet...</div>
    <% else %>
      <% @merchant.current_order.order_items.each do |item| %>
        <div class="item">
          <img class="preview-img" src="<%=item.image('wholesale')%>">
          <div class="details">
            <div class="name"><%= item.name %></div>
            <div class="price">
              <%= item.quantity %> x <%= number_to_currency(item.price) %> = <%= number_to_currency(item.quantity * item.price) %>
            </div>
            <div class="actions">
              <%= link_to "Edit", product_wholesale_order_path(item.product) %>
              <a remove-item="<%= item.build.id %>">Remove</a>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </order-preview>

</div>

<%= render "layouts/bottom" %>
