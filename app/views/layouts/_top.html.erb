<!doctype html>
<html <%= ng_helper %>>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="Unique leather cuffs and other cute stuffs.">
  <title>Fehu Inc.</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>

  <%= csrf_meta_tags %>
</head>

<body class="<%=controller_name.parameterize%>" id="<%=action_name.parameterize%>">
  <%= render "partials/flash" %>
  <%= render "partials/header" %>
  <%= render "partials/cart" %>
  <%= if admin? then render "partials/admin_header" end %>
