<!doctype html>
<html ng-app="FehuApp" wide-or-tall>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="Unique leather cuffs and other cute stuffs.">
  <title>Fehu Inc.</title>
  <script>
    FEHU = {}
    FEHU.imagePath = "<%= ENV['IMAGEPATH'] %>"
  </script>
  <%= stylesheet_link_tag "application", media: "all" %>
  <%= javascript_include_tag "application", defer: "defer" %>
  <%= yield :head %>
  <%= csrf_meta_tags %>
</head>

<body class="<%=style_controller%>" id="<%=style_action%>">
  <%= render "partials/modal_cover" %>
  <%= render "partials/flash" %>
  <%= render "partials/header" %>
  <%= render "partials/merchant_header" if merchant? %>
  <%= render "partials/admin_header" if admin? %>
  
  <!--[if gt IE 10]><!-->
  <main>
    <%= yield %>
  </main>
  <!--<![endif]-->

  <!--[if lte IE 10]>
    <%= render "partials/ie" %>
  <![endif]-->

  <%= render "partials/footer" %>
</body>
</html>
