<!doctype html>
<html ng-app="FehuApp">
<head>
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>Fehu Inc.</title>

  <meta name="description" content="Unique leather cuffs and other cute stuffs.">
  <meta name="keywords" content="fehu,leather,leather cuff,leather bracelet,leather belt,wrap cuff,handmade">

  <script>
    FEHU = {}
    FEHU.imagePath = "<%= ENV['IMAGEPATH'] %>"
  </script>

  <%= stylesheet_link_tag "application", media: "all" %>
  <%= javascript_include_tag "application", defer: "defer" %>

  <link rel="apple-touch-icon" href="favicon.png">
  <link rel="shortcut icon" href="<%=image_path "favicon.png"%>">

  <%= csrf_meta_tags %>
</head>

<body class="<%=style_controller%>" id="<%=style_action%>">
  <%= render "partials/modal_cover" %>
  <%= render "partials/flash" %>
  <%= render "partials/header" %>
  <%= render "partials/merchant_header" if merchant? %>
  <%= render "partials/admin_header" if admin? %>
  
  <!--[if gt IE 10]><!-->
  <main>
    <%= yield %>
  </main>
  <!--<![endif]-->

  <!--[if lte IE 10]>
    <%= render "partials/ie" %>
  <![endif]-->

  <%= render "partials/footer" %>
</body>
</html>
