<%= render "wholesale/orders/button_bar" %>

<div class="split">
  <order-builder>

    
    <h1>Add a Product to Your Order</h1>

    <div class="products">
      
      <% @kingdoms.each do |kingdom| %>
        <div class="kingdom">
          <h2><%= kingdom.name %></h2>
          
          <% kingdom.products.order(:name).each do |product| %>
            <a class="product" href="<%= product_wholesale_order_path(product.id) %>">
              <img src="<%=product.wholesale_image%>">
              <span><%= product.name %></span>
            </a>
          <% end %>
      
        </div>
      <% end %>
      
    </div>

    
  </order-builder>
  <%= render "wholesale/orders/order_preview" %>
</div>
