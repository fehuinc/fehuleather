<% content_for :title do "Events - Fehu Inc." end %>
<% content_for :description do "See where we'll be, so you can be there too." end %>

<h1 class="page-title">We Are Coming At You Live</h1>

<section>
  <% @events.each do |event| %>
    <div class="event">
      <h3 class="bar <%= bar_color %>"><%=event.name%></h3>
      <p><%=event.date.html_safe%></p>
      <p><%=event.location.html_safe%></p>
      <p class="description"><%=event.description.html_safe%></p>
      <% if event.website %><p><a href="<%=event.website%>">Website</a></p><% end %>
    </div>
  <% end %>

  <% if @events.empty? %>
    We are taking a short break from shows.
  <% end %>
</section>

<section class="book-us">
  <p>Want to book us for a future event? Get in touch:<br><em>ivan@fehuleather.com</em></p>
</section>
