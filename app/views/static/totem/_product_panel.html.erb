<div class="top">
  <div class="variation"><%=item.variation.name%></div>
  <div class="product"><%=item.variation.product.name%></div>
</div>

<div class="middle">
  <% if item.variation.product.sizes.count > 1 %>
    <size-selector>
      <% item.variation.product.sizes.each_with_index do |size, index| %>
        <div <%= 'class="selected"'.html_safe if index == 0 %>><%= size.name %></div>
      <% end %>
    </size-selector>
  <% end %>
  
  <div class="price">$<span js-price>100</span></div>
  <button>Yes Please!</button>
</div>

<purchase-selector class="perspective">
  <purchase-status class="submit">
    <button ng-click="Cart.add(currentBuild)">Update Quantity</button>
  </purchase-status>

  <purchase-status class="cart">
    <div>It's in <a>The Bag</a></div>
  </purchase-status>
</purchase-selector>

<bottom-info>
  <custom-info>
    <div>Sizing</div>
  </custom-info>
  <shop-info>
    <div>Shipping</div>
    <div>Refunds</div>
    <div>Uniqueness</div>
  </shop-info>
  <info-display>
    <div>Info Content</div>
  </info-display>
</bottom-info>
