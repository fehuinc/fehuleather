<%= render 'partials/form_errors', model: f.object %>

<div class="row spread">
  <div>
    <%= f.label :name, "Name" %>
    <%= f.text_field :name %>
  </div>
  
  <div>
    <%= f.label :model, "Model" %>
    <%= f.text_field :model %>
  </div>
</div>

<div class="row">
  <%= f.label :description_retail, "Retail Description" %>
  <%= f.text_area :description_retail, rows: 3 %>
</div>

<div class="row">
  <%= f.label :description_wholesale, "Wholesale Description" %>
  <%= f.text_area :description_wholesale, rows: 3 %>
</div>

<div class="row">
  <%= f.label :adjust_retail, "Retail Price Adjustment (CAD)" %>
  <%= f.number_field :adjust_retail %>
  <%= f.label :adjust_wholesale, "Wholesale Price Adjustment (CAD)" %>
  <%= f.number_field :adjust_wholesale %>
</div>

<hr>

<%= render 'partials/image_uploader', f:f, field: :totem_image, name: "Image on Fancy Background — Totem, Featured" %>
<%= render 'partials/image_uploader', f:f, field: :wholesale_image, name: "Image on White — Wholesale, Thumbnails" %>

<hr>

<% if edit %>
  <div class="row">
    <div class="perspective right">
      <deleter class="button" path="<%= admin_variation_path(@variation) %>" redirect="<%= edit_admin_product_path(@product) %>">
        Hold To Delete
      </deleter>
    </div>
  </div>
<% end %>

<div class="perspective">
  <%= f.submit "Save", class: "save", data: { disable_with: "Saving" } %>
  <%= link_to "Back", edit_admin_product_path(@product), class: "back" %>
</div>
