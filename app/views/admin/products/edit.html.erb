<h1><%= @product.name %></h1>

<section>
  <h2>Builds</h2>
  <table>
    <thead>
      <td>Build</td>
      <td>R</td>
      <td>W</td>
      <td>Stock</td>
    </thead>
    <% @builds.each do |build| %>
      <tr>
        <td><%= build.build_name %></td>
        <td><input type="checkbox"></td>
        <td><input type="checkbox"></td>
        <td><input type="number"></td>
      </tr>
    <% end %>
  </table>
</section>

<section>
  <h2>Variations</h2>
  <div class="variations">
    <% @variations.each do |variation| %>
      <div class="variation hide-edit">
        (Image Goes Here)
        <%= variation.name %>
        <%= link_to "Edit", edit_admin_variation_path(variation), class: "edit" %></h3>
      </div>
    <% end %>
  </div>
  <div class="new-variation">
    <%= link_to "New Variation", new_admin_product_variation_path(@product), class: "button" %>
  </div>
</section>

<section>
  <h2>Sizes</h2>
  <div class="sizes">
    <% @sizes.each do |size| %>
      <div class="size hide-edit">
        <%= size.name %> <%= link_to "Edit", edit_admin_size_path(size), class: "edit" %></h3>
      </div>
    <% end %>
  </div>
  <div class="new-size">
    <%= link_to "New Size", new_admin_product_size_path(@product), class: "button" %>
  </div>
</section>

<section>
  <h2>Info</h2>
  <% @infos.each do |info| %>
    <div class="info hide-edit">
      <%= info.name %> <%= link_to "Edit", edit_admin_product_info_path(info), class: "edit" %></h3>
    </div>
  <% end %>
  <div class="new-info">
    <%= link_to "New Info", new_admin_product_product_info_path(@product), class: "button" %>
  </div>
</section>

<section>
  <h2>Basics</h2>
  <%= form_for [:admin, @product] do |f| %>
    <%= render "admin/products/fields", f: f, edit: true %>
  <% end %>
</section>
