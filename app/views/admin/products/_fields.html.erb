<%= render 'partials/form_errors', model: f.object %>

<div>
  <%= f.label :name, "Name" %>
  <%= f.text_field :name %>
</div>

<div class="row">
  <%= f.label :description_retail, "Retail Description" %>
  <%= f.text_area :description_retail, rows: 3 %>
</div>

<div class="row">
  <%= f.label :description_wholesale, "Wholesale Description" %>
  <%= f.text_area :description_wholesale, rows: 3 %>
</div>

<div class="row">
  <%= f.label :price_retail, "Retail Price" %>
  <%= f.number_field :price_retail, step: 1 %>
  <%= f.label :price_wholesale, "Wholesale Price" %>
  <%= f.number_field :price_wholesale, step: 1 %>
</div>

<div class="row spread">
  <% if edit %>
    <div class="perspective right">
      <deleter class="button" path="<%= admin_product_path(@product) %>" redirect="<%= admin_products_path %>">
        Hold To Delete
      </deleter>
    </div>
  <% end %>
</div>

<div class="perspective">
  <%= f.submit "Save", class: "save", data: { disable_with: "Saving" } %>
</div>
