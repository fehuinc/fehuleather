<h1>Stinky Products</h1>

<% @kingdoms.each do |kingdom| %>
  <div class="kingdom">
    <h2><%= kingdom.name.pluralize %> (<%= link_to "Edit", edit_admin_kingdom_path(kingdom) %>)</h3></h2>
    
    <% kingdom.products.each do |product| %>
      <div class="product">
        <h3><%= product.name %> (<%= link_to "Edit", edit_admin_product_path(product) %>)</h3>
        
        <% product.variations.each do |variation| %>
          <div class="variation">
            <h4><%= variation.name %> (<%= link_to "Edit", edit_admin_variation_path(variation) %>)</h4>
            
            <% variations.variants.each do |variant| %>
              <div class="variant">
                <%= variant.name %> (<%= link_to "Edit", edit_admin_variant_path(variant) %>)
                
              </div>
            <% end %>
            <%= link_to "New Variant", new_admin_variation_variant_path(variation), class: "new-variant" %>
            
          </div>
        <% end %>
        <%= link_to "New Variation", new_admin_product_variation_path(product), class: "new-variation" %>
        
        <% product.infos.each do |info| %>
          <div class="info">
            <%= info.name %> (<%= link_to "Edit", edit_admin_info_path(info) %>)</h3>
          </div>
        <% end %>
        <%= link_to "New Info", new_admin_product_info_path(product), class: "new-info" %>
        
      </div>
    <% end %>
    <%= link_to "New #{kingdom.name.singularize}", new_admin_kingdom_product_path(kingdom), class: "new-product" %>
    
  </div>
<% end %>
<h3 class="new-kingdom"><%= link_to "New Kingdom", new_admin_kingdom_path %></h3>
