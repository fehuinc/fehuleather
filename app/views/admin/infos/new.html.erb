<h1>New Info</h1>
<h4 class="center"><%= "For the #{@product.name.titlecase}" %></h4>

<%= form_for [:admin, @product, @info] do |f| %>
  <%= render 'partials/form_errors', model: @info %>

  <div>
    <%= f.label :name, "Name" %>
    <%= f.text_field :name, autofocus:true %>
  </div>
  <div>
    <%= f.label :content, "Content" %>
    <%= f.text_area :content, rows: 5 %>
  </div>
  <hr>
  <div class="perspective">
    <%= f.submit "Save", class: "save" %>
  </div>
  
  <div class="center">
    <%= link_to "Er... cancel please!", edit_admin_product_path(@product) %>
  </div>
  
<% end %>
