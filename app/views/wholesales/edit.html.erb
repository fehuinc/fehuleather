<div class="split">
  <wholesale-builder>
    <div class="nav perspective">
      <a class="invisible button">I am invisible!</a>
    </div>

    <h1>Add a Product to Your Order</h1>
    <div class="products">
      <% @kingdoms.each do |kingdom| %>
        <div class="kingdom">
          <h2><%= kingdom.name %></h2>
          <% kingdom.products.order(:name).select(&:show_wholesale).each do |product| %>
            <a class="product" href="<%= product_wholesale_path(product.id) %>">
              <img src="<%=product.wholesale_image%>">
              <span><%= product.name %></span>
            </a>
          <% end %>
        </div>
      <% end %>
    </div>
  </wholesale-builder>

  <%= render "wholesales/wholesale_preview" %>

</div>
