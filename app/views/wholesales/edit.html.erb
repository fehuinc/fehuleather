<%= render "wholesales/button_bar" %>

<div class="split">

  <wholesale-builder>
    <h1>Add a Product to Your Order</h1>
    <div class="products">
      <% @kingdoms.each do |kingdom| %>
        <div class="kingdom">
          <h2><%= kingdom.name %></h2>
          <% kingdom.products.where(show_wholesale: true).order(:name).each do |product| %>
            <a class="product" href="<%= product_wholesale_path(product.id) %>">
              <img src="<%=product.wholesale_image%>">
              <span><%= product.name %></span>
            </a>
          <% end %>
        </div>
      <% end %>
    </div>
  </wholesale-builder>

  <%= render "wholesales/wholesale_preview" %>

</div>

<%= render "wholesales/button_bar" %>
